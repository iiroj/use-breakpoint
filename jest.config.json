{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "!*.d.ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)sx?$": [
      "@swc/jest",
      {
        "sourceMaps": true
      }
    ]
  }
}