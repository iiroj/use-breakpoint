{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": false,
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [".storybook/*.ts", "**/*.js", "**/*.ts", "**/*.tsx", "**/*.mjs"],
  "exclude": ["coverage", "node_modules", "dist"]
}
