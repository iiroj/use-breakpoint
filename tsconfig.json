{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": ".",
    "incremental": true,
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "include": [".storybook/*.js", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["coverage", "node_modules"]
}
