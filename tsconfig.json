{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": false,
    "jsx": "react",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node16",
    "noEmit": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [".storybook/*.js", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["coverage", "node_modules"]
}
